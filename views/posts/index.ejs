<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Bangkok post</title>
</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	  <div class="container-fluid">
		<a class="navbar-brand" href="/">Bangkok Post</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
		  <span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
		  <ul class="navbar-nav ms-auto">
		    <li class="nav-item">
			  <a class="nav-link" href="/">Home</a>
			</li>
		  <% if (user) { %>
			<li class="nav-item">
			  <a class="nav-link" href="/posts/new">New Post</a>
			<li class="nav-item">
			  <a class="nav-link" href="/users/profile">My profile</a>
			</li>
			<li class="nav-item">
			  <a class="nav-link" href="/auth/logout">Sign Out</a>
		    </li>
			<% } else { %>
			<li class="nav-item">
			  <a class="nav-link" href="/auth/google">Sign In</a>
		    </li>
			<% } %>
		  </ul>
		</div>
	  </div>
	</nav>
	
	<div class="container mt-4">
	<h1 class="mb-4">Latest Posts</h1>
	<div class="row">
		<% posts.forEach(function(post) { %>
			<div class="col-md-4 mb-4">
			  <div class="card h-100">
				<div class="card-body">
					<h5 class="card-title"><%= post.title %></h5>
					<p class="card-text"><%= post.text.substring(0, 149)%>...</p>
					<a href="/posts/<%= post._id %>" class="btn btn-primary">Read More</a>
				</div>
			  </div>
			</div>
		 <% }) %>
	 </div>
  </div>
	
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>